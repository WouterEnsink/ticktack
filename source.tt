// simple fibonacci generator
func fib (n)
{
    if (n <= 0) return -1
    if (n == 1) return 0
    if (n == 2) return 1

    return fib (n - 1) + fib (n - 2)
}

print (fib (9))     // should print 21.0

print (0-1)  // bug in ticktack: unary does not yet work

func factorial (n)
{
    if (n == 0)
        return 1

    return n * factorial (n-1)
}

print (factorial (10))
